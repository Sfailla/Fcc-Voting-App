<section id="createPoll">
    
    <div class="container">
        <h1>Create a new poll</h1>
        <span class="closePoll closeForm">&times;</span>

        <form action="/users/profile" method="POST" id="form">
            <div class="form-group">
                <label for="question" class="bold">Enter a question for your Poll</label>
                <input type="text" class="input-login" id="question" name="question" placeholder="please enter a question" >
            </div>
            <div class="form-group">
                <label for="option1" class="bold">Option</label>
                <input type="text" class="input-login" id="option1" name="option" placeholder="enter an option for your question" >
            </div>
            <div class="form-group">
                <label for="option2" class="bold">Option</label>
                <input type="text" class="input-login" id="option2" name="option" placeholder="enter an option for your question" >
            </div>
            <div class="add-option"></div>

            <button type="button" class="optionButton">Add Option</button>
            <button type="submit" class="submitButton">Submit</button>
        </form>
            
    </div>

 </section>
