{{!-- This is the Registration Page --}}

<link rel="stylesheet" href="/css/register.css">
<link rel="stylesheet" href="/css/forms.css">

{{!-- Any registration form errors will be displayed above the title --}}
{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">
            <span class="closebtn" onclick="this.parentElement.style.opacity=0">&times;</span>
            {{this.msg}}
        </div>
    {{/each}}
{{/if }}

{{#if regErr}}
<div class="container">
    <h3 class="blue-text">Sorry, it seems {{ alert }}. Please enter your info again.</h3>
</div>
{{/if }}

<section id="register">
    <div class="container lead-register">
        <h1>{{ title }}</h1>
    </div>
    <div class="form-container">
        <form action="/register" method="post" >
            <div class="form-group">
                <label for="username">Username</label>
                <input type="username" class="form-control input-registration" id="username" name="username" placeholder="Please enter a Username">
            </div>
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" class="form-control input-registration" id="email" name="email" placeholder="Please enter an Email">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control input-registration" id="password" name="password" placeholder="Please enter a Password">
            </div>
            <div class="form-group">
                <label for="passwordMatch">Confirm Password</label>
                <input type="password" class="form-control input-registration" id="passwordMatch" name="passwordMatch" placeholder="Please Re-enter your Password">
            </div>
            <button class="button" type="submit" id="submitButton">Submit</button>
        </form>
    </div> 
</section>   
